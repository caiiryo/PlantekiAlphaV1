

MDScreen:
    name: "landing"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "assets/Planteki_Logo.png"
            size_hint_x: None
            size_hint_y: None
            width: 30
            height: 30
            allow_stretch: True
            pos_hint: {"center_x": 0.1, "center_y": .96}
        MDLabel:
            text: "Planteki"
            font_name: "SFDispHeavy"
            font_size: "65sp"
            pos_hint: {"center_x": .5,"center_y": .70}
            line_height: ".75"
            halign: "center"
            color: rgba(114,122,67,255)
        Button:
            text: "Login"
            size_hint_x: 0.57
            size_hint_y: .054
            #width: 259
            #height: 71
            pos_hint: {"center_x": .5, "center_y": .47}
            background_color: 0, 0, 0, 0
            color: rgba(114,122,67,255)
            font_name: "SFTextBold"
            font_size: "20sp"
            halign: "center"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(114, 122, 67, 255)
                Line:
                    width: 2.3
                    rounded_rectangle: self.x, self.y, self.width, self.height, 12,12,12,12,200
        Button:
            text: "Sign Up"
            size_hint_x: 0.57
            size_hint_y: .054
            #width: 259
            #height: 71
            pos_hint: {"center_x": .5, "center_y": .40}
            background_color: 0, 0, 0, 0
            color: rgba(114,122,67,255)
            font_name: "SFTextBold"
            font_size: "20sp"
            halign: "center"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(114, 122, 67, 255)
                Line:
                    width: 2.3
                    rounded_rectangle: self.x, self.y, self.width, self.height, 12,12,12,12,200