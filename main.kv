MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        Label:
            text: "Greenify\nyour life!"
            font_name: "fonts/SFProDisplay-Heavy.ttf"
            font_size: "60sp"
            pos_hint: {"center_x": .5,"center_y": .80}
            line_height: ".75"
            halign: "center"
            color: rgba(114,122,67,255)
        Image:
            source: "assets/main_page_plant_lady.png"
            size_hint: .8, .8
            pos_hint: {"center_x": .5, "center_y": .48}
        Button:
            text: "Planteki"
            size_hint_x: None
            size_hint_y: None
            width: 259
            height: 71
            pos_hint: {"center_x": .5, "center_y": .28}
            background_color: 0, 0, 0, 0
            color: rgba(255, 248, 237, 255)
            font_name: "fonts/SFProText-Bold.ttf"
            font_size: "24sp"
            halign: "center"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "landing"
            canvas.before:
                Color:
                    rgb: rgba(114, 122, 67, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [38]
