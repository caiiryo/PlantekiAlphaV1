MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "assets/Planteki_Logo.png"
            size_hint_x: None
            size_hint_y: None
            width: 30
            height: 30
            allow_stretch: True
            pos_hint: {"center_x": .1000, "center_y": .96}
        MDLabel:
            text: "Greenify\nyour life!"
            font_name: "SFDispHeavy"
            font_size: "60sp"
            pos_hint: {"center_x": .5,"center_y": .80}
            line_height: ".75"
            halign: "center"
            color: rgba(114,122,67,255)
        Image:
            source: "assets/main_page_plant_lady.png"
            size_hint: .8, .8
            pos_hint: {"center_x": .5, "center_y": .50}
        Button:
            text: "Get Started"
            size_hint: .66, .065
            background_color: 0, 0, 0, 0
            font_name: "SFTextBold"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"

