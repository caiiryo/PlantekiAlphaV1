MDScreen:
    name: "dashboard"

    MDFloatLayout:
        md_bg_color: rgba(235, 235, 220, 255)

        MDIconButton:
            icon: "account-box"
            theme_text_color: "Custom"
            user_font_size: "100sp"
            text_color: rgba(114,122,67,255)
            pos_hint: {"center_x": 0.1, "center_y": .95}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "dashboard"

        MDIconButton:
            icon: "plus-box"
            theme_text_color: "Custom"
            user_font_size: "100sp"
            text_color: rgba(114,122,67,255)
            pos_hint: {"center_x": 0.9, "center_y": .95}

        Label:
            text: "Good Morning"
            font_name: "fonts/SFProDisplay-Heavy.ttf"
            font_size: "40sp"
            halign: "center"
            pos_hint: {"center_x": 0.5,"center_y": 0.85}
            color: rgba(114,122,67,255)

        Label:
            text: "User"
            font_name: "fonts/SFProText-Semibold.ttf"
            font_size: "25sp"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            color: rgba(114,122,67,255)

        MDBoxLayout:
            size_hint: None, None
            size: dp(360), dp(150)
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            md_bg_color: rgba(240, 240, 230, 255)
            radius: [20]
            padding: dp(10)
            spacing: dp(10)

            FitImage:
                source: "assets/twemoji_sun.png"
                size_hint: None, None
                size: dp(150), dp(150)

            # Right Side (Manila + Humidity)
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                size_hint_x: None
                width: dp(150)
                pos_hint: {"right": 1}

                # Manila Box
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint: None, None
                    size: dp(160), dp(80)
                    radius: [15]
                    md_bg_color: 1, 1, 1, 1
                    padding: dp(10)

                    MDLabel:
                        text: "Manila"
                        font_name: "fonts/SFProText-Semibold.ttf"
                        font_size: "16sp"
                        halign: "left"
                        color: rgba(114,122,67,255)

                    MDBoxLayout:
                        orientation: "horizontal"
                        spacing: dp(5)

                        MDIcon:
                            icon: "weather-sunny"
                            size_hint: None, None
                            size: dp(20), dp(20)
                            theme_text_color: "Custom"
                            text_color: rgba(255,165,0,255)

                        MDLabel:
                            text: "Sunny 38Â° Celcius"
                            font_name: "fonts/SFProText-Regular.ttf"
                            font_size: "14sp"
                            halign: "left"
                            color: rgba(114,122,67,255)

                # Humidity Box
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint: None, None
                    size: dp(160), dp(40)
                    radius: [15]
                    md_bg_color: rgba(120, 140, 80, 255)
                    padding: dp(10)

                    MDIcon:
                        icon: "thermometer"
                        size_hint: None, None
                        size: dp(20), dp(20)
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1

                    MDLabel:
                        text: "Humidity 27%"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "left"
                        color: 1, 1, 1, 1

        ScrollView:
            size_hint: (1, 0.790)
            pos_hint: {"center_x": 0.5, "y": -0.35}

            MDGridLayout:
                cols: 2
                adaptive_height: True
                padding: dp(10)
                spacing: dp(10)

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

