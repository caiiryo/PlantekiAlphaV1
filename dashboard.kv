                        size_hint_y: None
                        height: dp(150)

                    MDLabel:
                        text: "Dieffenbachia"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

                MDBoxLayout:
