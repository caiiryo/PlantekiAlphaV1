MDScreen:
    name: "dashboard"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        size: root.width, root.height

        Image:
            source: "assets/profile-user.png"
            size_hint: None, None
            size: 30, 30
            pos_hint: {"center_x": 0.1, "center_y": .96}

        # Weather Card
        MDCard:
            size_hint_x: 0.8
            size_hint_y: None
            height: 88
            radius: [10]  # Slightly rounded corners
            elevation: 6
            pos_hint: {"center_x": 0.5, "center_y": 0.85}
            md_bg_color: 0.447, 0.478, 0.263, 1

            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Line:
                    width: 2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "8dp"
                padding: [10, 10]
                adaptive_height: True

                MDIconButton:
                    source: "assets/cloudy.png"
                    theme_text_color: "Custom"
                    text_color: 0.447, 0.478, 0.263, 1
                    user_font_size: "24sp"

                MDLabel:
                    text: "Weather"
                    font_name: "fonts/SFProText-Bold.ttf"
                    theme_text_color: "Custom"
                    text_color: 0.447, 0.478, 0.263, 1
                    halign: "right"
                    valign: "center"

        # Temperature Card (New Card)
        MDCard:
            size_hint_x: 0.8
            size_hint_y: None
            height: 88
            radius: [10]  # Slightly rounded corners
            elevation: 6
            pos_hint: {"center_x": 0.5, "center_y": 0.70}
            md_bg_color: 0.447, 0.478, 0.263, 1

            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1  # Darker outline color
                Line:
                    width: 2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 10)

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "8dp"
                padding: [10, 10]
                adaptive_height: True

                MDIconButton:
                    source: "assets/thermometer.png"
                    theme_text_color: "Custom"
                    text_color: 0.447, 0.478, 0.263, 1
                    user_font_size: "24sp"

                MDLabel:
                    text: "Plants"
                    font_size: "18sp"
                    font_name: "fonts/SFProText-Bold.ttf"
                    theme_text_color: "Custom"
                    text_color: 0.447, 0.478, 0.263, 1
                    halign: "right"
                    valign: "center"
