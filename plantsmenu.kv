                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

                    FitImage:
                        source: "assets/spiderplant.jpg"
                        size_hint_y: None
                        height: dp(150)

                    MDLabel:
                        text: "Spider Plant"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

        MDBoxLayout:
            size_hint_y: None
            height: dp(120)  # Matches the icon size
            md_bg_color: rgba(245, 245, 245, 255)  # Light gray background
            pos_hint: {"x": 0, "y": -0.009}  # Sticks to the bottom
            padding: dp(5)
            spacing: dp(5)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(5)
                size_hint_x: None
                width: dp(100)
                pos_hint: {"center_x": 0.2}

                MDIconButton:
                    icon: "home"
                    theme_text_color: "Custom"
                    user_font_size: "100sp"
                    text_color: rgba(114,122,67,255)
                    pos_hint: {"center_x": 0.5}
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "dashboard"

                Label:
                    text: "Home"
                    font_name: "fonts/SFProText-Regular.ttf"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(114,122,67,255)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(5)
                size_hint_x: None
                width: dp(100)
                pos_hint: {"center_x": 0.4}

                MDIconButton:
                    icon: "sprout"
                    theme_text_color: "Custom"
                    user_font_size: "100sp"
                    text_color: rgba(114,122,67,255)
                    pos_hint: {"center_x": 0.5}
                    on_release:
                        root.manager.transition.direction = "up"
                        root.manager.current = "plantsmenu"

                Label:
                    text: "Plants"
                    font_name: "fonts/SFProText-Regular.ttf"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(114,122,67,255)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(5)
                size_hint_x: None
                width: dp(100)
                pos_hint: {"center_x": 0.6}

                MDIconButton:
                    icon: "web"
                    theme_text_color: "Custom"
                    user_font_size: "100sp"
                    text_color: rgba(114,122,67,255)
                    pos_hint: {"center_x": 0.5}
                    on_release:
                        root.manager.transition.direction = "up"
                        root.manager.current = "wiki"

                Label:
                    text: "Wiki"
                    font_name: "fonts/SFProText-Regular.ttf"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(114,122,67,255)

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(5)
                size_hint_x: None
                width: dp(100)
                pos_hint: {"center_x": 0.8}

                MDIconButton:
                    icon: "camera"
                    theme_text_color: "Custom"
                    user_font_size: "150sp"
                    text_color: rgba(114,122,67,255)
                    pos_hint: {"center_x": 0.5}
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "sensor"

                Label:
                    text: "Sensor"
                    font_name: "fonts/SFProText-Regular.ttf"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(114,122,67,255)
