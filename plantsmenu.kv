MDScreen:
    name: "plantsmenu"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDIconButton:
            icon: "magnify"
            theme_text_color: "Custom"
            user_font_size: "100sp"
            text_color: rgba(114,122,67,255)
            pos_hint: {"center_x": 0.8, "center_y": .95}

        MDIconButton:
            icon: "plus-box"
            theme_text_color: "Custom"
            user_font_size: "100sp"
            text_color: rgba(114,122,67,255)
            pos_hint: {"center_x": 0.9, "center_y": .95}

        Label:
            text: "My Plants"
            font_name: "fonts/SFProDisplay-Heavy.ttf"
            font_size: "49sp"
            pos_hint: {"center_x": .340,"center_y": .88}
            color: rgba(114,122,67,255)

        ScrollView:
            size_hint: (1, 0.790)
            pos_hint: {"center_x": 0.5, "y": 0.02}

            MDGridLayout:
                cols: 2
                adaptive_height: True
                padding: dp(5)
                spacing: dp(5)

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

                    FitImage:
                        source: "assets/dieffenbachia.jpg"
                        size_hint_y: None
                        height: dp(150)

                    MDLabel:
                        text: "Dieffenbachia"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

                    FitImage:
                        source: "assets/philodendron.jpg"
                        size_hint_y: None
                        height: dp(150)

                    MDLabel:
                        text: "Philodendron"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

                    FitImage:
                        source: "assets/elephant.jpg"
                        size_hint_y: None
                        height: dp(150)

                    MDLabel:
                        text: "Elephant Ear"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

                    FitImage:
                        source: "assets/snakeplant.jpg"
                        size_hint_y: None
                        height: dp(150)

                    MDLabel:
                        text: "Snake Plant"
                        font_name: "fonts/SFProText-Regular.ttf"
                        font_size: "14sp"
                        halign: "center"
                        theme_text_color: "Secondary"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(180)
                    spacing: dp(5)

                    FitImage:
                        source: "assets/goldenpothos.png"
                        size_hint_y: None
