MDScreen:
    name: "forgotpass"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        size_hint: None, None
        size: dp(70), dp(70)
        pos_hint: {"center_x": 0.1, "center_y": .97}

        MDIconButton:
            icon: "arrow-left"
            theme_text_color: "Custom"
            user_font_size: "100sp"
            text_color: rgba(114,122,67,255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "landing"
    Label:
        text: "Forgot Password"
        font_name: "fonts/SFProText-Bold.ttf"
        font_size: "23sp"
        pos_hint: {"center_x": .5,"center_y": .95}
        color: rgba(114,122,67,255)

    Label:
        text: "Enter Email Address"
        font_name: "fonts/SFProText-Semibold.ttf"
        font_size: "16sp"
        pos_hint: {"center_x": .5,"center_y": .85}
        color: rgba(114,122,67,255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .76}
        TextInput:
            hint_text: "Email Address"
            font_name: "fonts/SFProText-Regular.ttf"
            size_hint_y: .75
            pos_hint: {"center_x": .50, "center_y": .90}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "17sp"
            cursor_width: "2sp"
            multiline: False
        MDFloatLayout:
            pos_hint: {"center_x": .50, "center_y": .78}
            size_hint_y: .03
            md_bg_color:rgba(178, 178, 178, 255)

    Button:
        text: "Send"
        size_hint_x: 0.57
        size_hint_y: .054
        pos_hint: {"center_x": .5, "center_y": .35}
        background_color: 0, 0, 0, 0
        color: rgba(114,122,67,255)
        font_name: "fonts/SFProText-Bold.ttf"
        font_size: "20sp"
        halign: "center"
        on_release:
            root.manager.transition.direction = "left"
            root   .manager.current = "verification"
        canvas.before:
            Color:
                rgb: rgba(114, 122, 67, 255)
            Line:
                width: 2.3
                rounded_rectangle: self.x, self.y, self.width, self.height, 12,12,12,12,200
