MDScreen:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

    MDBoxLayout:
        size_hint: None, None
        size: dp(70), dp(70)  # Adjust this to your preferred size
        pos_hint: {"center_x": 0.1, "center_y": .97}  # Adjust position

        MDIconButton:
            icon: "arrow-left"
            theme_text_color: "Custom"
            user_font_size: "100sp"
            text_color: rgba(114,122,67,255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "landing"

    Label:
        text: "Welcome!"
        font_name: "fonts/SFProDisplay-Heavy.ttf"
        font_size: "49sp"
        pos_hint: {"center_x": .365,"center_y": .89}
        color: rgba(114,122,67,255)
    Label:
        text: "Sign in to continue"
        font_name: "fonts/SFProText-Semibold.ttf"
        font_size: "23sp"
        pos_hint: {"center_x": .372,"center_y": .832}
        color: rgba(107, 107, 107, 255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .62}
        TextInput:
            hint_text: "Username"
            font_name: "fonts/SFProText-Regular.ttf"
            size_hint_y: .75
            pos_hint: {"center_x": .50, "center_y": .5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "17sp"
            cursor_width: "2sp"
            multiline: False
        MDFloatLayout:
            pos_hint: {"center_x": .50, "center_y": .31}
            size_hint_y: .03
            md_bg_color:rgba(178, 178, 178, 255)

    MDFloatLayout:
        size_hint: .7, .07
        pos_hint: {"center_x": .5, "center_y": .52}
        TextInput:
            hint_text: "Password"
            font_name: "fonts/SFProText-Regular.ttf"
            size_hint_y: .75
            pos_hint: {"center_x": .50, "center_y": .5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "17sp"
            cursor_width: "2sp"
            multiline: False
            password: True
        MDFloatLayout:
            pos_hint: {"center_x": .50, "center_y": .31}
            size_hint_y: .03
            md_bg_color:rgba(178, 178, 178, 255)

    Button:
        text: "Login"
        size_hint_x: 0.57
        size_hint_y: .054
        pos_hint: {"center_x": .5, "center_y": .35}
        background_color: 0, 0, 0, 0
        color: rgba(114,122,67,255)
        font_name: "fonts/SFProText-Bold.ttf"
        font_size: "20sp"
        halign: "center"
        on_release:
            root.manager.transition.direction = "left"
            root   .manager.current = "dashboard"
        canvas.before:
            Color:
                rgb: rgba(114, 122, 67, 255)
            Line:
                width: 2.3
                rounded_rectangle: self.x, self.y, self.width, self.height, 12,12,12,12,200

    MDButton:
        text: "Forgot Password"
        pos_hint: {"center_x": .5, "center_y": .28}
        font_name: "BPoppins"  # Remove this if you suspect a font issue
        font_size: "30sp"
        style: "text"
        size_hint: None, None  # Ensure the button has a defined size
        width: dp(200)  # Set a fixed width to test visibility
        height: dp(50)
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1  # Use red temporarily to see if it appears
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "signup"



    MDLabel:
        text: "or"
        color: rgba(107, 107, 107, 255)
        pos_hint: {"center_y": .22}
        font_size: "13sp"
        font_name: "BPoppins"
        halign: "center"
    MDFloatLayout:
        md_bd_color: rgba(107, 107, 107, 255)
        size_hint: .3, .002
        pos_hint: {"center_x": .3, "center_y": .22}
    MDFloatLayout:
        md_bd_color: rgba(178, 178, 178, 255)
        size_hint: .3, .002
        pos_hint: {"center_x": .7, "center_y": .22}

